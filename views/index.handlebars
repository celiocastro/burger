
<div class="burger-display">
    <div class="burgers-available">
        <h3 class="burger-heading">Burgers Available</h3>
        <ul class="burger-list">
            {{#each burgers}} {{#unless this.devoured}}
            <li class="burger-available">
                <input type="text" value="{{this.burger_name}}" class="burger-text" disabled="disabled" />
                <button data-id="{{this.id}}" class="burger-submit">Devour It!</button>
            </li>
            {{/unless}} {{/each}}
        </ul>
    </div>
    <div class="burgers-eaten">
        <h3 class="burger-heading">Burgers Eaten</h3>
        <ul class="burger-list">
            {{#each burgers}} {{#if this.devoured}}
            <li class="burger-eaten">
                {{this.burger_name}}
            </li>
            {{/if}} {{/each}}
        </ul>
    </div>
</div>
<div class="burger-entry">
    <input type="text" name="burger-name" class="burger-name" />
    <button id="btn_add">Submit!</button>
    <p>Enter in a burger you would like to eat!</p>
</div>